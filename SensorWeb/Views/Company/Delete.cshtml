@model SensorWeb.Models.CompanyModel
@inject SensorWeb.Resources.CommonLocalizationService localizer


<h4 style="text-align:center">@localizer.Get("CompanyTitle") </h4>
<hr />

<h5 style="">@localizer.Get("DeleteRegister")</h5>
<div class="row screenCreate">
    <div class="col-md-12 formclasscreate">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LegalName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LegalName)
            </dd>
        </dl>
    </div>
    <div class="col-md-12 ">
        <div class="form-group screenCreateControls col-md-6">
            <form asp-action="Delete">
                <input asp-for="LegalName" type="hidden" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary">@localizer.Get("BackToList")</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">

        $(document).ready(function ($) {

            @if (ViewBag.ErrorMsg != null)
            {
                <text>
                    alert('@Html.Raw(ViewBag.ErrorMsg)');
                </text>
            }

        });

    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
