                    <b>@Html.DisplayNameFor(m => m.AlarmeAcionamento): </b><span class="circulo @Html.DisplayTextFor(m => m.AlarmeAcionado).ToLower()"></span>@Html.DisplayTextFor(m => m.AlarmeAcionado)
