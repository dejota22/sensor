@model ReportModel

@inject SensorWeb.Resources.CommonLocalizationService localizer
@inject Core.Service.IDeviceService deviceService
@inject Core.Service.IMotorService motorService

@{
    Layout = "~/Views/Shared/_Layout_Graficos.cshtml";
}

<style type="text/css">

    body {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
    }

    .page-sidebar, .page-header, .page-footer {
        display: none;
    }

    .page-content {
        width:100%;
    }

    textarea {
        border: none;
        outline: none;
        padding: 0;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-top: calc(-1 * var(--bs-gutter-y));
        margin-right: calc(-.5 * var(--bs-gutter-x));
        margin-left: calc(-.5 * var(--bs-gutter-x));
    }

        .row > * {
            flex-shrink: 0;
            width: 100%;
            max-width: 100%;
            padding-right: calc(var(--bs-gutter-x) * .5);
            padding-left: calc(var(--bs-gutter-x) * .5);
            margin-top: var(--bs-gutter-y);
        }

    .col-sm {
        flex: 1 0 0%;
    }

    .col-sm-4 {
        flex: 0 0 auto;
        width: 33.33333333%;
    }

    .col-sm-8 {
        flex: 0 0 auto;
        width: 66.66666667%;
    }

    .text-center {
        text-align: center;
    }

    .border {
        border: 2px solid !important;
    }

    .border-right {
        border-right: 2px solid !important;
    }

    .border-bottom {
        border-bottom: 2px solid !important;
    }

    .circulo {
        height: 10px;
        width: 50px;
        display: inline-block;
        margin-right: 10px;
    }

    .verde {
        background-color: green;
    }

    .amarelo {
        background-color: yellow;
    }

    .vermelho {
        background-color: red;
    }

    #chartdiv {
        width: 100%;
        max-width: 100%;
        height: 500px;
        margin-bottom: 20px;
    }

    #overview {
        margin: 20px 0;
        width: 100%;
        max-width: 100%;
        height: 75px;
    }

    #legenddiv {
        margin: 0 20px 10px 20px;
        width: 100%;
        max-width: 100%;
        height: 5px;
    }

    .legendLayer .background {
        fill: rgba(255, 255, 255, 0.85);
        stroke: rgba(0, 0, 0, 0.85);
        stroke-width: 1;
    }

    .x2Label {
        fill: #224499;
        font-weight: bold;
        font-size: 18px;
        font-family: Tahoma, sans-serif;
    }

    .y2Label {
        fill: #224499;
        font-weight: bold;
        font-size: 18px;
        font-family: Tahoma, sans-serif;
    }

    .red-alarm-option {
        color: darkred;
    }

    

</style>


