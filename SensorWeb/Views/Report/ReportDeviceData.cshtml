<style>
    #chartdiv {
        width: 100%;
        max-width: 100%;
        height: 500px;
    }

    #overview {
        margin: 20px 0;
        width: 100%;
        max-width: 100%;
        height: 75px;
    }

    #legenddiv {
        margin: 0 20px 10px 20px;
        width: 100%;
        max-width: 100%;
        height: 75px;
    }

    .legendLayer .background {
        fill: rgba(255, 255, 255, 0.85);
        stroke: rgba(0, 0, 0, 0.85);
        stroke-width: 1;
    }
</style>

<h4 style="text-align:center">Relatório Dados Sensor</h4>
<hr />
<div class="container">

    <form asp-action="Create">

        <div class="row">
            
            <div class="form-group col-md-3">
                <label class="control-label">Equipamento</label>
                @Html.DropDownList("MotorId", new SelectList(motorService.GetQueryDropDownListByTag(), "Key", "Value"),
                @localizer.Get("MotorSelect"), new Dictionary<string, object> { { "class", "form-control main-selects" } })
                <span id="validation-MotorId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">Sensor</label>
                @Html.DropDownList("DeviceId", new SelectList(deviceService.GetQueryDropDownList(), "Key", "Value"),
                @localizer.Get("DeviceSelect"), new Dictionary<string, object> { { "class", "form-control main-selects" } })
                <span id="validation-DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">Dados</label>
                <select id="DataDeviceId" name="DataDeviceId" class="form-control">
                    <option value="">-- Selecione os Dados --</option>
                </select>
                <span id="validation-DataDeviceId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">&nbsp;</label>
                <input type="submit" value="Visualizar" class="btn btn-primary" style="width:100%;" />
            </div>
        </div>

        <div>

            <div id="overview"></div>
            <div id="legenddiv"></div>
            <div id="chartdiv"></div>

        </div>

    </form>



</div>


@section Scripts
    {
    <script type="text/javascript">
        var tempo_data = [];
        var valor_data = [];
        var possible_colors = ["rgb(237,194,64)", "rgb(175,216,248)", "rgb(203,75,75)", "rgb(77,167,77)",
            "rgb(148,64,237)", "rgb(189,155,51)", "rgb(140,172,198)", "rgb(162,60,60)", "rgb(61,133,61)",
            "rgb(118,51,189)", "rgb(255,232,76)", "rgb(210,255,255)", "rgb(243,90,90)", "rgb(92,200,92)",
            "rgb(177,76,255)"
        ];

        $(document).ready(function ($) {

            $('.main-selects').on('change', function (e) {
                let deviceId = $('#DeviceId').val();
                let motorId = $('#MotorId').val();

                if (deviceId != '' && motorId != '')
                    document.location.href = '@Url.Action("ReportDeviceData")' + '?DeviceId=' + deviceId + '&MotorId=' + motorId;
            });

            $('#deviceTab a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });

            drawGraficos();
        });


        function setDaysField(idPart) {
            
        }

        function drawGraficos() {
            var legendContainer = document.getElementById("legenddiv");
            var options = {
                legend: {
                    show: true,
                    noColumns: 2,
                    container: legendContainer
                },
                series: {
                    lines: {
                        show: true,
                        lineWidth: 2
                    },
                    points: {
                        show: false
                    },
                    sampling: 'average'
                }
            };

            var plot = $.plot($('#chartdiv'), [{ data: tempo_data, label: "tempo" }, { data: valor_data, label: "valor" }], options);


            $("#chartdiv").bind("plotselected", function (event, ranges) {
                $.each(plot.getXAxes(), function (_, axis) {
                    var opts = axis.options;
                    opts.min = ranges.xaxis.from;
                    opts.max = ranges.xaxis.to;
                });
                plot.setupGrid();
                plot.draw();
                plot.clearSelection();

                // don't fire event on the overview to prevent eternal loop
                overview.setSelection(ranges, true);
            });

            var overview = $.plot("#overview", leituras_telemetria, {
                series: {
                    lines: {
                        show: true,
                        lineWidth: 1
                    },
                    shadowSize: 0
                },
                xaxis: {
                    position: "top"
                },
                selection: {
                    mode: "x"
                }
            });

            $("#overview").bind("plotselected", function (event, ranges) {
                plot.setSelection(ranges);
            });

        }

        

    </script>
}

