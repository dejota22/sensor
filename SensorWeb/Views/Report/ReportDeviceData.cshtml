                <span id="validation-DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">Dados</label>
                <select id="DataDeviceId" name="DataDeviceId" class="form-control main-selects">
                    <option value="">Selecionar Dados</option>
                </select>
                <span id="validation-DataDeviceId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <input type="submit" value="Visualizar" class="btn btn-primary" />
            </div>
        </div>

        <div>

            <div id="overview"></div>
            <div id="legenddiv"></div>
            <div id="chartdiv"></div>

