@inject SensorWeb.Resources.CommonLocalizationService localizer

<h4 class="screenTitle">@localizer.Get("Change Password") </h4>
<hr />
<div class="row screenCreate">
    <div class="col-md-12 formclasscreate">
        <form action="ChangePassword" method="post">
            <div validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-12 formclasscreate">

                <div class="form-group col-md-6">
                    <label for="Password" class="control-label">@localizer.Get("Password")</label>
                    <input name="Password" id="Password" class="form-control" type="password" />
                    <span validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="PasswordConfirm" class="control-label">@localizer.Get("Password Confirm")</label>
                    <input name="PasswordConfirm" id="PasswordConfirm" type="password" class="form-control" />
                    <span validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group screenCreateControls col-md-6">
                    <button id="btnSubCP" type="button" value="" class="btn btn-primary">@localizer.Get("Save")</button>
                </div>
            </div>
        </form>
    </div>
</div>
<hr />


@section Scripts {
    <script>
        $('#btnSubCP').click(function(){
            if ($('#Password').val() != '' && ($('#Password').val() == $('#PasswordConfirm').val()))
            {
                $('form').submit();
            }
            else
            {
                alert('As senhas não conferem');
            }
        });
        
    </script>
    
}


