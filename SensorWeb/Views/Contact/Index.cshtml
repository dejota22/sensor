@model IEnumerable<ContactModel>

@inject SensorWeb.Resources.CommonLocalizationService localizer


<h4 style="color:white; text-align:center">@localizer.Get("ContactTitle") </h4>
<hr />
<p>
    @if (User.IsInRole("Administrador"))
    {
        <a href="@Url.Action("Create", "Contact" )" title="@localizer.Get("Add new")">
            <img src="@Url.Content("~/Resources/new_rec_32x32.png")" />
        </a>
    }
</p>
<table class="table sclistTable">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(modelItem => modelItem.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.NomeCompleto)

            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Email)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem.Cpf)
            </th>
            <th class="sccentralize">
                @Html.DisplayNameFor(modelItem => modelItem.IsActive)
            </th>

            <th style="text-align:center">
                @localizer.Get("Actions")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sctbodyresult">
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td class="sccentralize">
                    @Html.CheckBoxFor(modelItem => item.IsActiveBool)
                </td>
                <td style="text-align:center">

                    <a href="@Url.Action("Details", "Contact", new { id = item.Id })" title="@localizer.Get("View")" class="links">
                        <img alt="List View" style="height:16px;width:23px;margin-right:15px" src="@Url.Content("~/Resources/visual.png")">
                    </a>

                    @if (User.IsInRole("Administrador"))
                    {
                        <a href="@Url.Action("Edit", "Contact", new { id = item.Id })" title="@localizer.Get("Edit")" class="links">
                            <img alt="List View" style="margin-right: 15px" src="@Url.Content("~/Resources/lapis_16x16.png")">
                        </a>
                        <a href="@Url.Action("Delete", "Contact", new { id = item.Id })" title="@localizer.Get("Delete")" class="links">
                            <img alt="List View" src="@Url.Content("~/Resources/exc_16x16.png")">
                        </a>
                    }

                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
