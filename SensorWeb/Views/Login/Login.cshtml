<body>

    @Html.AntiForgeryToken()

    <!-- scrollToTop -->
    <!-- ================ -->
    <div class="scrollToTop circle"><i class="icon-up-open-big"></i></div>

    <!-- page wrapper start -->
    <!-- ================ -->
    <div class="page-wrapper">
        <!-- background image -->
        <div class="fullscreen-bg"></div>

        <!-- banner start -->
        <!-- ================ -->
        <div class="pv-40 dark-translucent-bg">
            <div class="container">

                <div class="row justify-content-center">

                    <div class="object-non-visible" data-animation-effect="fadeInDownSmall" data-effect-delay="100">


                        <div class="col-auto">


                            <div id="logo" class="logo text-center">
                                <center><h3 class="margin-clear"><img src="@Url.Content("~/img/logo-iot-nest.png")" alt="IotNest" title="IotNest" style="width:280px;height:86px" /></h3></center>
                            </div>


                            <div class="form-block center-block p-30 light-gray-bg border-clear mt-3">

                                <h2 class="title" style="text-transform:none"><i class="fa fa-lock" aria-hidden="true" style="padding-right:7px;font-size:0.8em"></i> @localizer.Get("RestrictedAccess")</h2>

                                <div class="row">

                                    <div class="col-md-12">



                                        <form class="form-horizontal" action="Login" name="ficha" method="post">

                                            <div class="form-group has-feedback row">

                                                <label for="inputUserName" class="col-md-3 text-md-right control-label col-form-label">@localizer.Get("User")</label>

                                                <div class="col-md-8">
                                                    <input type="text" maxlength="50" class="form-control" name="username" id="username" placeholder="Login: " required>
                                                </div>

                                            </div>

                                            <div class="form-group has-feedback row">

                                                <label for="inputPassword" class="col-md-3 text-md-right control-label col-form-label">@localizer.Get("Pass")</label>

                                                <div class="col-md-8">
                                                    <input type="password" maxlength="8" class="form-control" name="pass" id="pass" placeholder="Senha: " required>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="ml-md-auto col-md-9">
                                                    <button type="submit" class="btn btn-group btn-primary btn-animated">Acessar <i class="fa fa-chevron-right"></i></button>
                                                    <a href="#" data-toggle="modal" data-target="#lembSenhaModal" style="margin-left:40px;">Esqueci minha senha</a>
                                                </div>
                                            </div>

                                        </form>

                                    </div>


                                </div>


                            </div>


                            <p class="mt-20 text-center">Copyright © Iot<strong>Nest/Vibração</strong></p>


                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="modal fade" id="lembSenhaModal" tabindex="-1" role="dialog" aria-labelledby="lembSenhaModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="lembSenhaModalLabel">Esqueci Minha Senha</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    Informe o seu e-mail abaixo para receber a uma nova senha. <br /><br />
                    <div class="row mb-3">

                        <div class="col-12">
                            <b>Email</b>
                            <input id="LembEmail" name="LembEmail" type="email" class="form-control" maxlength="60" autocomplete="off_LembEmail" />
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <button id="btnEsqSenha" type="button" class="btn btn-primary">Receber Nova Senha</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Jquery and Bootstap core js files -->
    <script src="@Url.Content("~/login/jquery.min.js")"></script>
    <script src="@Url.Content("~/login/popper.min.js")"></script>
    <script src="@Url.Content("~/bootstrap/js/bootstrap.min.js")"></script>

    <!-- Modernizr javascript -->
    <script src="@Url.Content("~/login/modernizr.js")"></script>
    <script src="@Url.Content("~/login/waypoints/jquery.waypoints.min.js")"></script>
    <script src="@Url.Content("~/login/waypoints/sticky.min.js")"></script>
    <script src="@Url.Content("~/login/jquery.countTo.js")"></script>
    <script src="@Url.Content("~/login/jquery.parallax-1.1.3.js")"></script>
    <script src="@Url.Content("~/login/jquery.validate.js")"></script>
    <script src="@Url.Content("~/login/owlcarousel2/owl.carousel.min.js")"></script>

    <!-- Initialization of Plugins -->
    <script src="@Url.Content("~/login/template.js")"></script>
    <script src="@Url.Content("~/login/custom.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnEsqSenha').click(function () {
                let lembEmail = $('#LembEmail').val();
                if (lembEmail != '') {
                    document.location = '@Url.Content("~/Login/EsqueciSenha")?email=' + lembEmail;
                }
                else {
                    alert('Por favor, preencha o campo com o seu e-mail!');
                }
            });
        });
    </script>

</body>
