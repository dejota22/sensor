@section Scripts {

    <script type="text/javascript">

        $(document).ready(function ($) {

            loadUnitsFromCompany();

            $('#CompanyId').on('change', function () {
                loadUnitsFromCompany();
            });

            $('#UnitId').on('change', function () {

                let unitId = $('#UnitId').val();
                let setorSelect = $('#SetorId');
                let subSetorSelect = $('#SubSetorId');

                setorSelect.find('option').not(':first').remove();
                subSetorSelect.find('option').not(':first').remove();

                if (unitId != '') {
                    $('#SetorId').attr('required', 'required');
                    $.post('@Url.Content("~/Unit/GetSectors")', { uId: unitId }, function (data) {
                        $.each(data.secs, function () {
                            setorSelect.append($("<option />").val(this.id).text(this.name));
                        });
                    });
                }
                else {
                    $('#SetorId').removeAttr('required');
                }
            });

            $('#SetorId').on('change', function () {

                let setorId = $('#SetorId').val();
                let subSetorSelect = $('#SubSetorId');

                if (setorId != '') {
                    $('#SectorId').val(setorId);
                    $.post('@Url.Content("~/Unit/GetSubSectors")', { sId: setorId }, function (data) {
                        $.each(data.subs, function () {
                            subSetorSelect.append($("<option />").val(this.id).text(this.name));
                        });
                    });
                }
            });

            $('#SubSetorId').on('change', function () {

                let subSetorId = $('#SubSetorId').val();

                if (subSetorId != '') {
                    $('#SectorId').val(subSetorId);
                }
            });
        });

        function loadUnitsFromCompany() {
            let companyId = $('#CompanyId').val();
            if (companyId != '') {
                $('#UnitId option[cid!="' + companyId + '"]').hide();
                $('#UnitId option[cid="' + companyId + '"]').show();
            }
            else {
                $('#UnitId option').show();
            }

            $('#UnitId').val('');
            $('#SectorId').val('');
            $('#SubSectorId').val('');
        }

        function salvarMotorDevice() {
            var idMotor = document.getElementById("Id").value;
            var idDevice = document.getElementById("DeviceId").value;
            var planoMedicao = document.getElementById("MeasurementPlan").value;
            var orientacaoSensor = document.getElementById("SensorOrientation").value;

            if (idDevice == '' || planoMedicao == '' || orientacaoSensor == '')
            {
                if (idDevice == '')
                    $('#MotorDeviceValidation').html('O Sensor é obrigatório');
                else
                    $('#MotorDeviceValidation').html('');

                if (planoMedicao == '')
                    $('#MeasurementPlanValidation').html('O Plano de Medição é obrigatório');
                else
                    $('#MeasurementPlanValidation').html('');

                if (orientacaoSensor == '')
                    $('#SensorOrientationValidation').html('A Orientação do Sensor é obrigatória');
                else
                    $('#SensorOrientationValidation').html('');
            }
            else
            {
                $('#preloader').fadeIn();
                $.post('@Url.Content("~/Motor/InsertMotorDevice")', { mId: idMotor, dId: idDevice, planoMedicao: planoMedicao, orientacaoSensor: orientacaoSensor }, function (data) {
                    if (data.success) {
                        alert('Sensor adicionado com sucesso');
                        document.location.reload();
                    }
                    else {
                        let msg = "";

                        msg += '<tr class="headerChanges">';
                        msg += ("<th>Data</th>");
                        msg += ("<th>Equipamento</th>");
                        msg += ("<th>Usuário</th>");
                        msg += ("<th>Nº Mudança</th>");
                        msg += "</tr>";

                        $.each(data.logs, function (index, value) {
                            msg += '<tr class="cont-row">';
                            msg +=  ("<td>" + value.data + "</td>");
                            msg +=  ("<td>" + value.equip + "</td>");
                            msg += ("<td>" + value.user + "</td>");
                            msg += ("<td>" + (index == 0 ? 'Alocação Inicial' : value.change) + "</td>");
                            msg += "</tr>";
                        });


                        $('#tblChanges').html(msg);
                        abrirMsgModal();
                        $('#preloader').hide();
                    }
                });
            }
        }

        function abrirMsgModal() {
            $('#msg-modal').modal('show');
        }

        function excluirMotorDevice(id) {
            var idMotor = document.getElementById("Id").value;

            if (confirm("Tem certeza que deseja remover o sensor?") == true) {
                $('#preloader').fadeIn();
                $.post('@Url.Content("~/Motor/DeleteMotorDevice")', { mId: idMotor, id: id }, function (data) {
                    if (data.success) {
                        alert('Sensor removido com sucesso');
                        document.location.reload();
                    }
                    else {
                        $('#preloader').hide();
                    }
                });
            }
        }

    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
