        $(".ventiladorgroup").hide();
        $(".compressorgroup").hide();
        $(".resfriamentogroup").hide();
        $(".geradorgroup").hide();
    }

    function aFunc(typeId) {
        hideGroups();

        if (typeId == 1) {
            $(".motorgroup").show();
            $(".transmissaogroup").show();
            $(".acopladorgroup").show();
            $(".cardangroup").show();
            $(".poliagroup").show();
            $(".coroagroup").show();
        }

        if (typeId == 2) {
            $(".transmissaogroup").show();
            $(".acopladorgroup").show();
        }

        if (typeId == 3) {
            $(".transmissaogroup").show();
            $(".cardangroup").show();
        }

        if (typeId == 4) {
            $(".transmissaogroup").show();
            $(".poliagroup").show();
        }

        if (typeId == 5) {
            $(".transmissaogroup").show();
            $(".coroagroup").show();
        }

        if (typeId == 6) {
            $(".redutorgroup").show();
        }

        if (typeId == 7) {
            $(".bombagroup").show();
        }

        if (typeId == 8) {
            $(".ventiladorgroup").show();
        }

        if (typeId == 9) {
            $(".compressorgroup").show();
        }

        if (typeId == 10) {
            $(".resfriamentogroup").show();
        }

        if (typeId == 11) {
            $(".geradorgroup").show();
        }
    }

