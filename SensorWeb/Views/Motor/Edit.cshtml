        $("form").attr('action', '@Url.Action("CreateCopy")');
        $("#Name").val("Cópia - " + $("#Name").val());
        $("#Tag").val("");
        $("#Id").val("0");
        $("form").submit();
    });

    $(document).on('change', '#InputAxle', function () {
        if ($('#InputAxle').is(':checked'))
            $('.input-axle-field').show();
        else
            $('.input-axle-field').hide();
    });
    $(document).on('change', '#MiddleAxle', function () {
        if ($('#MiddleAxle').is(':checked'))
            $('.middle-axle-field').show();
        else
            $('.middle-axle-field').hide();
    });
    $(document).on('change', '#MiddleAxle2', function () {
        if ($('#MiddleAxle2').is(':checked'))
            $('.middle-axle2-field').show();
        else
            $('.middle-axle2-field').hide();
    });
    $(document).on('change', '#OutputAxle', function () {
        if ($('#OutputAxle').is(':checked'))
            $('.output-axle-field').show();
        else
            $('.output-axle-field').hide();
    });

    $(document).on('change', '#PumpTypeId', function () { pumpFunc($("#PumpTypeId").val()); });

    function pumpFunc(pumpTypeId) {
        hidePumpGroups();

        if (pumpTypeId == 7) {
            $(".pumpcentgroup").show();
        }
        else if (pumpTypeId == 1 || pumpTypeId == 8) {
            $(".pumpgeargroup").show();

        }
        else if (pumpTypeId == 4) {
            $(".pumpbladegroup").show();
        }
    }

    function hidePumpGroups() {
        $(".pumpcentgroup").hide();
        $(".pumpgeargroup").hide();
        $(".pumpbladegroup").hide();
    }

    function getDeviceData(deviceId) {
        $.get('@Url.Content("~/Device/GetDeviceData")?id=' + deviceId, function (data) {
            if (data != null && data.id != null) {
                $("#DFrequency").val(data.frequency);
                $("#DBdr").val(data.bdr);
                $("#DCutoff").val(data.cutoff);
                $("#DLpf").val(data.lpf);
                $("#DLines").val(data.lines);
                $("#DAxies").val(data.axies);

                $("#DTemperature").val(data.temperature);
                $("#DRms").val(data.rms);
                $("#DBattery").val(data.battery);
                $("#DHours").val(data.hours);
                $("#DVelocityMin").val(data.velocityMin);
                $("#DVelocityMax").val(data.velocityMax);
                $("#DAccelerationMin").val(data.accelerationMin);
                $("#DAccelerationMax").val(data.accelerationMax);
                $("#DCrestFactorMin").val(data.crestFactorMin);
                $("#DCrestFactorMax").val(data.crestFactorMax);
            }
        });
    }

    function hideGroups() {
        $(".motorgroup").hide();
        $(".transmissaogroup").hide();
        $(".acopladorgroup").hide();
        $(".cardangroup").hide();
        $(".poliagroup").hide();
        $(".coroagroup").hide();
        $(".redutorgroup").hide();
        $(".bombagroup").hide();
        $(".ventiladorgroup").hide();
        $(".compressorgroup").hide();
        $(".resfriamentogroup").hide();
        $(".geradorgroup").hide();
    }

    //$(document).on('load', '#TypeId', function () {
    //    alert(this.value);
